pipeline {
    agent any   // Run on any available agent

    tools {
        maven 'Maven3'   // Name of Maven installation in Jenkins (Manage Jenkins → Global Tool Configuration)
        jdk 'Java11'     // Name of JDK installation in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out source code..."
                git branch: 'main', url: ''
            }
        }

        stage('Build') {
            steps {
                echo "Running Maven Clean and Compile..."
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                echo "Running Unit Tests..."
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'  // Publish test reports
                }
            }
        }

        stage('Package') {
            steps {
                echo "Packaging the application..."
                sh 'mvn package'
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo "Archiving JAR/WAR files..."
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build finished successfully ✅'
        }
        failure {
            echo 'Build failed ❌'
        }
    }
}
